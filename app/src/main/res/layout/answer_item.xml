<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:paddingBottom="1dp">

    <View
        android:id="@+id/color_indicator"
        android:layout_width="5dp"
        android:layout_height="82dp" />

    <ImageView
        android:id="@+id/iv_customer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/layout_texts"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/color_indicator"
        android:layout_toRightOf="@+id/color_indicator"
        android:background="@android:color/transparent"
        android:contentDescription="@null" />

    <LinearLayout
        android:id="@+id/layout_texts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_customer"
        android:orientation="vertical"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:visibility="gone"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:maxLines="1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:visibility="gone"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:maxLines="1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_correct_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:visibility="gone"
            android:maxLines="1"
            android:textSize="13sp" />

    </LinearLayout>


</RelativeLayout>